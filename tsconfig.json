{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist/ts",
    "declarationDir": "./dist/ts",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "composite": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "mxgraph": ["./dist/build.js"]
    }
  },
  "include": ["index.d.ts", "src/ts/**/*.ts", "src/ts/**/*.d.ts"]
}
