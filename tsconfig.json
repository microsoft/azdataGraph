{
  "compilerOptions": {
    "target": "es2016",
    "module": "ES6",
    "declaration": true,
    "emitDeclarationOnly": false,
    "outDir": "./dist",
    "declarationDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": ["index.d.ts", "src/typings/**/*.d.ts", "src-ts/**/*.ts"],
}
